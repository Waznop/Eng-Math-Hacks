{
	"manifest_version": 2,
	"name": "Reminder extension",
	"version": "1.0",

	"description": "An extension for creating reminders",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Reminders"
	},

	"permissions": [
		"activeTab"
	],

	"background": {
		"scripts": ["background.js"]
	}
}