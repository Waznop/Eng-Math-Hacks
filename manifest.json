{
	"manifest_version": 2,
	"name": "Reminder extension",
	"version": "1.0",

	"description": "An extension for creating reminders",

	"browser_action": {
		"default_icon": "icon-38.png",
		"default_title": "Reminders",
		"default_popup": "popup.html"
	},

	"permissions":["storage", "alarms"],

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}

}